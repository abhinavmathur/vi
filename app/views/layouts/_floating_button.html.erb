<% if user_signed_in? %>
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">add</i>
  </a>
  <ul>
    <li>
      <a class="btn-floating yellow tooltipped" data-position="left" data-delay="50" data-tooltip="Add Review" href="/reviews/new"><i class="material-icons">
      playlist_add</i></a>
    </li>
    <li>
      <a class="btn-floating green tooltipped" data-position="left" data-delay="50" data-tooltip="Edit Review"><i class="material-icons">mode_edit</i></a>
    </li>
    <li>

      <%= link_to new_user_reviewgroup_path(current_user), class:"btn-floating blue tooltipped", data: { position: "left", delay: "50", tooltip: "Add Review Group"} do %>
      <i class="material-icons">list</i>
      <% end %>
    </li>
  </ul>
</div>
<% end %>
