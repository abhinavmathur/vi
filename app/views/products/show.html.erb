<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-content">
        <span class="card-title blue-text">Description</span>

        <div class="">
          <%= @product.description.html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-content">
        <span class="card-title blue-text">Related Video Reviews</span>
        <div class="row">
          <% if @product.reviews.count == 0 %>
          <p class="flow-text center">No reviews of this product yet</p>
          <% else %>
          <% @product.reviews.each do |review| %>
          <%= link_to review.title, review_path(review) %>
          <% end %>
          <% end %>
        </div>
        <% @product.tags.split(',').each_with_index do |tag, index| %>
        <% if index > 5 %>
        <% break %>
        <% end %>
        <div class="blue darken-4 white-text chip">
          <%= tag.to_s %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
