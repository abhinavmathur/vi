<%= @product.title %>
<br>

<%= @product.asin %>

<div class="row">
  <div class="col s12 m5 offset-m3 ">
    <div class="image-box">
      <% unless @product.product_images.nil? %>
          <% @product.product_images.split(',').each do |image| %>
              <div class="valign-wrapper">
                <img src="<%= image.to_s %>" alt="amazon_image" class="responsive-img">
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>



<script type="text/javascript" charset="utf-8">
  $('.image-box').slick({
    dots: true,
    infinite: true,
    lazyLoad: 'ondemand',
    speed: 500,
    arrows: true,
    autoplay: true,
    fade: true,
    cssEase: 'linear'
  });
</script>