<div class="card">
  <div class="card-content">
    <span class="card-title"><%= product.title %></span>
    <div class="divider"></div>
    <div class="center">
      <img src="<%= product.product_images.split(',').first %>" class="responsive-img" alt="">
    </div>
  </div>
  <div class="card-action">
    <a href="https://localhost:3000/products/<%= product.slug %>">Visit Product page</a>
    <button onclick="show_product_form()">Wrong Product</button>
  </div>
</div>